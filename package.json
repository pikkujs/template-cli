{
  "name": "test-app",
  "type": "module",
  "private": true,
  "dependencies": {
    "@pikku/core": "^0.11.2",
    "@pikku/jose": "^0.11.1",
    "@pikku/schema-cfworker": "^0.11.0",
    "eventsource": "^4.1.0",
    "ws": "^8.19.0",
    "zod": "^4",
    "@pikku/uws": "^0.11.1",
    "@pikku/websocket": "^0.11.0"
  },
  "devDependencies": {
    "@pikku/cli": "^0.11.3",
    "@pikku/fetch": "^0.11.1",
    "@pikku/websocket": "^0.11.0",
    "@types/node": "^24",
    "@types/ws": "^8",
    "concurrently": "^9.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9"
  },
  "scripts": {
    "build": "tsc -b",
    "ncu:pikku": "npx npm-check-updates -f '/@pikku/.*/'",
    "pikku": "pikku all",
    "test:http-fetch": "npx tsx client/http-fetch.ts",
    "test:http-sse": "npx tsx client/http-sse.ts",
    "test:rpc": "npx tsx client/rpc.ts",
    "test:websocket": "npx tsx client/websocket.ts",
    "test:cli:local": "npx tsx client/cli-local.gen.ts list",
    "test:workflows": "npx tsx client/workflow.ts",
    "test:triggers": "npx tsx client/trigger.ts",
    "start": "tsx src/server.ts",
    "cli": "tsx client/cli-local.gen.ts",
    "cli:local": "tsx client/cli-local.gen.ts",
    "server": "tsx src/server.ts",
    "dev:server": "tsx watch src/server.ts",
    "test": "",
    "postinstall": "pikku all",
    "stackblitz": "concurrently 'pikku watch --silent' 'npm run dev'"
  },
  "description": "Pikku CLI template showcasing both local and remote (channel-based) CLI approaches",
  "stackblitz": {
    "startCommand": "npm run stackblitz"
  }
}